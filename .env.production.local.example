# Production Database Configuration for Local Migration Scripts
# Copy this file to .env.production.local and fill in your actual values
# NEVER commit .env.production.local to version control!

# PostgreSQL connection string for Prisma
DATABASE_URL="postgresql://username:password@host:port/database?schema=public"

# Direct connection URL (for migrations - bypasses connection pooling)
DIRECT_URL="postgresql://username:password@host:port/database?schema=public"

# Optional: Migration security tokens (if using API endpoint method)
MIGRATION_SECRET_TOKEN="your-very-secure-random-token-min-32-chars"
ADMIN_API_KEY="your-admin-api-key-for-migrations"

# Optional: Production URL for remote migrations
PRODUCTION_URL="https://your-app.vercel.app"

# Connection options (optional)
# Add these to your connection string if needed:
# ?sslmode=require - For SSL connections
# ?connection_limit=1 - Limit connection pool
# ?pool_timeout=20 - Connection pool timeout
